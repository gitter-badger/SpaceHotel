#filter_fields
  #reportrange{:style => "background: #fff; cursor: pointer; padding: 5px 10px; border: 1px solid #ccc"}
    %i.glyphicon.glyphicon-calendar.fa.fa-calendar
    %span
    %b.caret
  .specification-chooser
    - @filterrific.select_options[:with_specification].each do |specification|
      %br= specification[0]
      %input{:checked=>"checked", :type=>"checkbox", :value => specification[1]}
  .filterrific-sliders
    %br Price
    %input#price-slider{:type=>"text"}
    %br Size
    %input#size-slider{:type=>"text"}
    %br Occupancy
    %input#occupancy-slider{:type=>"text"}

%br= select_tag :sort_by, options_for_select(@filterrific.select_options[:sort_by])

